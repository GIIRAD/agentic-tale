{
  "name": "name",
  "version": "1.1.2",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --format stylish .",
    "format": "prettier --write './**/*.{js,mjs,json,ts,tsx}'",
    "nvm:powershell": "powershell nvm use $(cat .nvmrc)",
    "nvm:bash": "bash -c 'nvm use $(cat .nvmrc)'",
    "docker:rm": "docker rm -f salesmanager",
    "docker:rmi": "docker rmi salesmanager:latest -f",
    "docker:build": "npm run docker:rm && npm run docker:rmi && dotenvx run -f .env.local -- docker build --build-arg API_URL --secret id=api_key,env=API_KEY -t salesmanager:latest .",
    "docker:create": "npm run docker:rm && docker create --name salesmanager --env-file .env.local -p 3000:3000 salesmanager:latest",
    "docker:start": "docker start salesmanager --attach",
    "docker:run": "npm run docker:build && npm run docker:create && npm run docker:start"
  },
